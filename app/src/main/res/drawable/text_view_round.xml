<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 设置一个边框 -->
    <stroke android:width="2px" android:color="#1296db"/>
    <!-- 圆角 -->
    <corners android:radius="360dp" />
    <!-- 渐变 -->
    <gradient
        android:angle="0"
        android:endColor="#1296db"
        android:startColor="#1296db" />
    <!-- 设置一下边距,让空间大一点 -->
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp"/>

</shape>
